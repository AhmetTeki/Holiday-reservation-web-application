@model TraversalRezervasyonApp.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Mail Gönderme Sayfası</h1>

<form method="post">

    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div>
    <div class="form-group mt-3">
        @Html.Label("Konu")
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <div class="form-group mt-3">
        @Html.Label("Mesaj İçeriği")
        <input type="text" asp-for="Body" class="form-control" />
    </div>
    <button class="btn btn-outline-success mt-3">Mail Gönder</button>
</form>